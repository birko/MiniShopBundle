<form action="{{ path('checkout_useraddress')}}" method="post" class="full">
    {{ form_errors(form) }}
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
           <legend class="paymentaddress">{% trans %}Payment address{% endtrans %}</legend>
            <div class="row">
                <div class="col-sm-10 col-md-10 col-lg-10 paymentaddress nolabel">
                    {{ form_widget(form.paymentAddress) }}
                </div>
                <div class="col-sm-2 col-md-2 col-g-12 paymentaddress">
                    <a href="{{path('address')}}" class="btn btn-default"><span class="g;yphicon glyphicon-list-alt"></span> {% trans %}Addresses{% endtrans %}</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 sameaddress">
            {{ form_widget(form.sameAddress) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
          <legend class="shippingaddress">{% trans %}Shipping address{% endtrans %}</legend>
            <div class="row">
                <div class="col-sm-10 col-md-10 col-lg-10 shippingaddress nolabel">
                  {{ form_widget(form.shippingAddress) }}
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 shippingaddress">
                    <a href="{{path('address')}}" class="btn btn-default"><span class="glyphicon glyphicon-list-alt"></span> {% trans %}Addresses{% endtrans %}</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <a href="{{path('cart')}}" class="btn btn-default pull-left"><span class="glyphicon glyphicon-arrow-left"></span> {% trans %}Back to cart{% endtrans %}</a>
            <button type="submit" class="btn btn-default pull-right">{% trans %}Continue{% endtrans %} <span class="g;yphicon glyphicon-arrow-right"></span></button>
            {{ form_rest(form) }}
        </div>
    </div>
</form>
