<form class="cart-add-form" action="{{ path('cart_add', {'product': entity.productId})}}" method="post">
      <div class="row">
        <div class="col-sm-7 col-md-7 col-lg-7">
          {% block cartaddform %}
          {{form_widget(form.amount, {'attr': {'class': 'input-sm'}})}}
          {% endblock %}
          {% if options is not empty %}
          {% for widget in form.options %}
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              {{form_widget(widget, {'attr': {'class': 'input-sm'}})}}
            </div>
          </div>
          {% endfor %}
          {% endif %}
          {{form_rest(form)}}
        </div>
        <div class="col-sm-5 col-md-5 col-lg-5 pull-right">
            <button type="submit" class="btn btn-default btn-block pull-right"><span class="glyphicon glyphicon-shopping-cart"></span> {% trans %}Add to cart{% endtrans %}</button>
        </div>
    </div>
</form>
