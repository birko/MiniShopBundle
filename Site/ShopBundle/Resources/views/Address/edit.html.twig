{% extends '::base.html.twig' %}

{% block body %}
<div id="content-container">
<form action="{{ path('address_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="full">
  <fieldset>
  <legend>{% trans %}Address edit{% endtrans %}</legend>

    <div class="row">
        <div class="col-sm-6 col-md-6 col-lg-6">
            {% include 'CoreShopBundle:Address:baseform.html.twig' with {'form': edit_form}%}
        </div>
        <div class="col-sm-6 col-md-6 col-lg-6">
            {% include 'CoreShopBundle:Address:contactform.html.twig' with {'form': edit_form}%}
            {% include 'CoreShopBundle:Address:companyform.html.twig' with {'form': edit_form}%}
        </div>
    </div >
    <div class="form-actions row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            {{ form_rest(edit_form) }}
            <button type="submit" class="btn btn-default">{% trans %}Edit{% endtrans %}</button>
            <a href="{{ path('address') }}" class="btn btn-default">
                {% trans %}Back to the list{% endtrans %}
            </a>
        </div>
    </div>
  </fieldset>
</form>
<form action="{{ path('address_delete', { 'id': entity.id }) }}" method="post" class="form-actions">
    {{ form_widget(delete_form) }}
    <button type="submit" class="btn btn-default">{% trans %}Delete{% endtrans %}</button>
</form>
</div>
{% endblock %}
