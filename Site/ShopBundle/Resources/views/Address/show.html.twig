{% extends '::base.html.twig' %}

{% block content %}
<h1>Address</h1>

<table class="record_properties table table-bordered">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Street</th>
            <td>{{ entity.street }}</td>
        </tr>
        <tr>
            <th>City</th>
            <td>{{ entity.city }}</td>
        </tr>
        <tr>
            <th>Zip</th>
            <td>{{ entity.ZIP }}</td>
        </tr>
        <tr>
            <th>Tin</th>
            <td>{{ entity.TIN }}</td>
        </tr>
        <tr>
            <th>Oin</th>
            <td>{{ entity.OIN }}</td>
        </tr>
        <tr>
            <th>Vatin</th>
            <td>{{ entity.VATIN }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>{{ entity.phone }}</td>
        </tr>
    </tbody>
</table>

<a href="{{ path('address') }}" class="btn">
    Back to the list
</a>
    <a href="{{ path('address_edit', { 'id': entity.id }) }}" class="btn btn-primary">
        Edit
    </a>
    <form action="{{ path('address_delete', { 'id': entity.id }) }}" method="post">
        <div class="form-actions">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </form>
{% endblock %}
