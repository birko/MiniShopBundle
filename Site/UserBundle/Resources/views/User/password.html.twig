{% extends '::base.html.twig' %}
{% block body %}
<div id="content-container">
<h1>{% trans %}Password{% endtrans %}</h1>
<form action="{{ path("SiteUserBundle_changepassword") }}" method="post" id="form-login">
    <div class="row">
        <div class="col-sm-4 col-md-4 col-lg-4">
            {{ form_widget(form) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <button type="submit" class="btn btn-default" name="submit" value="Change"><span class="glyphicon glyphicon-ok"></span> {% trans %}Change{% endtrans %}</button>
        </div>
    </div>
</form>
</div>
{% endblock %}
