<form action="{{ path('newsletter_email_subscribe') }}" method="post" {{ form_enctype(form) }}>
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <label>{{form_label(form.email)}}</label>
            <div class="input-group">
                {{form_widget(form.email)}}
                <button type="submit" class="button-ok input-group-addon"><span class="glyphicon glyphicon-ok"></span></button>
            </div>
            {{form_rest(form)}}
            <a href="{{ path('newsletter_email_unsubscribe') }}">{% trans %}Unsubscribe{% endtrans%}</a>
        </div>
    </div>
</form>
