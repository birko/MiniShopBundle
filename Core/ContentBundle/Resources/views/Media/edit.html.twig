{% extends '::admin.html.twig' %}
{% block body %}
<h1>{% trans %}Content Media edit{% endtrans %}</h1>

<form action="{{ path('content_media_update', { 'id': entity.id, 'content': content, 'category': category, 'type': entity.type }) }}" method="post" {{ form_enctype(edit_form) }}>
     <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10">
            {{ form_errors(edit_form) }}
			{% include 'CoreMediaBundle:Media:form.html.twig' with {'form': edit_form, 'cultures': cultures } %}
			{{ form_widget(edit_form) }}
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2">
            {% include "CoreMediaBundle:Media:display.html.twig" with {'entity': entity, 'dir': 'thumb', 'link_path': '', 'gallery': ''} %}
        </div>
    </div>
    <p>
        <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> {% trans %}Edit{% endtrans %}</button>
        <a href="{{ path('content_media', {'category': category, 'content': content}) }}"> {% trans %}Back to the list{% endtrans %}</a>
    </p>
</form>

<form action="{{ path('content_media_delete', { 'id': entity.id, 'content': content, 'category': category, 'type': entity.type }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> {% trans %}Delete{% endtrans %}</button>
</form>
{% endblock %}
