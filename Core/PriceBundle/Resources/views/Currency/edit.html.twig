{% extends '::admin.html.twig' %}

{% block body -%}
<h1>{%trans%}Currency edit{%endtrans%}</h1>

<form action="{{ path('currency_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_row(edit_form.name) }}
    {{ form_row(edit_form.symbol) }}
    {{ form_row(edit_form.rate) }}
    {{ form_row(edit_form.code) }}
    {{ form_widget(edit_form.default) }}
    {{ form_rest(edit_form) }}
    <p>
        <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> {%trans%}Edit{%endtrans%}</button>
		<a href="{{ path('currency') }}" class="btn btn-default">{% trans %}Back to the currency list{% endtrans %}</a>
    </p>
</form>
<form action="{{ path('currency_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button type="submit" class="btn btn-danger"><span class="glypicon glyphicon-remove"></span> {%trans%}Delete{%endtrans%}</button>
</form>
{% endblock body%}
