{% extends 'NeonusNwsPriceBundle::layout.html.twig' %}
{% block navigation %}
{% include 'NeonusNwsPriceBundle:CurrencyAdmin:navigation.html.twig' with {'currency': entity} %}
{% endblock %}
{% block content %}
<h1>Currency</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Symbol</th>
            <td>{{ entity.symbol }}</td>
        </tr>
        <tr>
            <th>Code</th>
            <td>{{ entity.code }}</td>
        </tr>
        <tr>
            <th>Rate</th>
            <td>{{ entity.rate }}</td>
        </tr>
        <tr>
            <th>Default</th>
            <td>{{ entity.default }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('currency_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('currency_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
