{% extends 'NwsUserBundle::layout.html.twig' %}
{% block content %}
<h1>{% trans %}User{% endtrans %}</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{% trans %}Login{% endtrans %}</th>
            <td>{{ entity.login }}</td>
        </tr>
	<tr>
            <th>{% trans %}Email{% endtrans %}</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>{% trans %}Created At{% endtrans %}</th>
            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>

    </tbody>
</table>
{% endblock %}
{% block sidebar%}
<ul class="record_actions">
    <li>
        <a href="{{ path('user') }}">
            {% trans %}Back to the list{% endtrans %}
        </a>
    </li>
    <li>
        <a href="{{ path('user_edit', { 'id': entity.id }) }}">
            {% trans %}Edit{% endtrans %}
        </a>
    </li>
    <li>
        <form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">{% rrans %}Delete{% endtrans %}</button>
        </form>
    </li>
</ul>
{% endblock %}
