{% extends '::admin.html.twig' %}
{% block body %}
<h1>{% trans %}Product Media list{% endtrans %}</h1>

<table class="records_list table table-striped table-condensed">
    <thead>
        {% if product is not empty %}
        <tr>
            <td colspan="3">
                <div class="btn-group  pull-right">
                    <a href="{{ path('product_media_new', {'category': category, 'product': product.id, 'type': 'image'}) }}" class="btn btn-xs btn-primary"><span class="glyphicon glyphicon-plus"></span> {% trans %}Create a new image{% endtrans %}</a>
                    <a href="{{ path('product_media_new', {'category': category, 'product': product.id, 'type': 'video'}) }}" class="btn btn-xs btn-primary"><span class="glyphicon glyphicon-plus"></span> {% trans %}Create a new video{% endtrans %}</a>
                </div>
            </td>
        </tr>
        {% endif %}
        <tr>
            <th  class="col-sm-2 col-md-2 col-lg-2">{% trans %}Media{% endtrans %}</th>
            <th>{% trans %}Title{% endtrans %}</th>
            <th class="col-sm-3 col-md-3 col-lg-3">{% trans %}Actions{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td class="col-sm-2 col-md-2 col-lg-2">
                <div>
                {% include "CoreMediaBundle:Media:display.html.twig" with {'entity': entity, 'dir': 'thumb', 'link_path': '', 'gallery': ''} %}
                </div>
            </td>
            <td>{{ entity.title }}</td>
            <td class="col-sm-3 col-md-3 col-lg-3">
                <div class="btn-group">
                <a href="{{ path('product_media_edit', { 'id': entity.id , 'category': category, 'product': product.id, 'type': entity.type}) }}" class="btn btn-xs btn-warning"><span class="glyphicon glyphicon-edit"></span> {% trans %}Edit{% endtrans %}</a>
                <a href="{{ path('media_source', { 'id': entity.id, 'type': entity.type}) }}" class="btn btn-xs btn-warning"><span class="glyphicon glyphicon-edit"></span> {% trans %}Source{% endtrans %}</a>
				<a href="{{ path('product_media_position', { 'id': entity.id, 'category': category, 'product': product.id }) }}" class="btn btn-default btn-xs">{{product.getProductMedia(entity.id).position}}</a>
                <a class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" href="#">{% trans %}Move{% endtrans%} <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="{{ path('product_media_up', { 'id': entity.id, 'category': category, 'position': 1, 'product': product.id }) }}" class="move-up"><span class="glyphicon glyphicon-arrow-up"></span> {% trans %}Move up{% endtrans %}</a></li>
                    <li><a href="{{ path('product_media_down', { 'id': entity.id, 'category': category, 'position': 1, 'product': product.id }) }}" class="move-down"><span class="glyphicon glyphicon-arrow-down"></span> {% trans %}Move down{% endtrans %}</a></li>
                </ul>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
