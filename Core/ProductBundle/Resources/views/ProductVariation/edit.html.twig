{% extends '::admin.html.twig' %}
{% block body %}
<h1>{%trans%}Product Variation edit{%endtrans%}</h1>

<form action="{{ path('product_variation_update', { 'id': entity.id, 'product': entity.product.id, 'category': category }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_row(edit_form.variation) }}
	{{ form_row(edit_form.amount) }}
	{{ form_rest(edit_form) }}
    <p>
       <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> {%trans%}Edit{%endtrans%}</button>
	   <a href="{{path('product_variation', {'product': entity.product.id, 'category': category})}}" class="btn btn-default">{% trans %}Back to the product variation list{% endtrans%}</a>
    </p>
</form>

<form action="{{ path('product_variation_delete', { 'id': entity.id, 'product': entity.product.id, 'category': category }) }}" method="post">
  {{ form_widget(delete_form) }}
  <button type="submit" class="btn btn-danger">
    <span class="glyphicon glyphicon-remove"></span> {%trans%}Delete{%endtrans%}
  </button>
</form>
{% endblock %}
