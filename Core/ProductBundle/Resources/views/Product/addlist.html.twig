{% extends '::admin.html.twig' %}
{% block body %}
<h1>{%trans%}Product list{%endtrans%}</h1>
<form action="" method="post" class="filter form-actions">
<div class="row">
    <div class="col-sm-3 col-md-3 col-lg-3">
         {{ form_row(filter.words, {'attr': {'class': 'input-sm'}}) }}
    </div>
    <div class="col-sm-2 col-md-2 col-lg-2">
         {{ form_row(filter.vendor, {'attr': {'class': 'input-sm'}}) }}
    </div>
    <div class="col-sm-2 col-md-2 col-lg-2 input-append">
         {{ form_row(filter.order, {'attr': {'class': 'input-sm'}}) }}
    </div>
    <div class="col-sm-1 col-md-1 col-lg-1">
        <div>
            <label> &nbsp; </label><br />
            {{ form_rest(filter) }}
            <button class="btn btn-default btn-sm"><span class="glyphicon glyphicon-ok icon-white"></span></button>
        </div>
    </div>
</div>
</form>
{{ knp_pagination_render(entities) }}
<table  class="table table-striped table-condensed table-hover">
    <thead>
        <tr>
            <th>{%trans%}Title{%endtrans%}</th>
            <th>{%trans%}Actions{%endtrans%}</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <td colspan="2">
                <a href="{{path('product',  {'category': category })}}" class="btn">
                   {%trans%}Back to list{%endtrans%}
                </a>
            </td>
        </tr>
    </tfoot>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.title }}</td>
            <td>
               <a href="{{ path('product_add', { 'id': entity.id, 'category': category  }) }}" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-plus"></span> {%trans%}Add{%endtrans%}</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{{ knp_pagination_render(entities) }}
{%endblock body %}
