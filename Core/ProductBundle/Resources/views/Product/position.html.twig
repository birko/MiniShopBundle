{% extends '::admin.html.twig' %}
{% block body %}
<h1>{% trans %}Product position edit{% endtrans %}</h1>

<form action="{{ path('product_position_update', { 'id': entity.id, 'category': category }) }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p>
        <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> {% trans %}Edit{% endtrans %}</button>
        <a href="{{ path('product', {'category': category}) }}"> {% trans %}Back to the list{% endtrans %}</a>
    </p>
</form>
{% endblock %}
