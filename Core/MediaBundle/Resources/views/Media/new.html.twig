{% extends '::admin.html.twig' %}
{% block body %}
<h1>{% trans %}Media creation{% endtrans %}</h1>

<form action="{{ path('media_create', {'type': type}) }}" method="post" {{ form_enctype(form) }}>
     <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10">
			{{ form_errors(form) }}
			{% include 'CoreMediaBundle:Media:form.html.twig' with {'form': form, 'cultures': cultures } %}
			{{ form_widget(form) }}
        </div>
     </div>
     <p>
         <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> {% trans %}Create{% endtrans %}</button>
         <a href="{{ path('media') }}"> {% trans %}Back to the list{% endtrans %}</a>
     </p>
</form>
{% endblock %}
